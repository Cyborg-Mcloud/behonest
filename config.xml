<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.designge.behonest"
	    versionCode="1" 
        version   = "0.0.5"
		package="com.designge.behonest">
    <name>BeHonest</name>


	<icon src="logo.png" />


<access origin="*" />
<allow-intent href="*" />
<allow-navigation href="*" />

 <platform name="android">
        <preference name="android-minSdkVersion" value="18" />
        <allow-intent href="market:*" />
    </platform>


<preference name="android-build-tool" value="gradle" /> 

	<preference name="phonegap-version" value="cli-6.5.0" /> 
	<preference name="orientation" value="portrait" />
	<preference name="target-device"              value="handset" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="true" />  
	<preference name="DisallowOverscroll" value="false" />
	<preference name="stay-in-webview"            value="true" /> 

<preference name="exit-on-suspend"            value="false" />          
<preference name="show-splash-screen-spinner" value="false" />    
<preference name="auto-hide-splash-screen"    value="false" />
<preference name="disable-cursor"             value="false" />
<preference name="android-minSdkVersion"      value="11" />         
<preference name="android-installLocation"    value="auto" />
<preference name="EnableViewportScale"    value="true" />

	<description>
   BeHonest - Anonymous Messaging App With Replies
    </description>
	

    <author href="http://behonest.io" email="uabashidze@gmail.com">
        Cyborg-Mcloud
    </author>


 


	<feature name="App">
	  <param name="android-package" value="com.designge.behonest"/>
	</feature>
	


	<feature name="http://api.phonegap.com/1.0/device" />


	<gap:plugin name="cordova-plugin-inappbrowser"  source="npm" />
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />



</widget>
